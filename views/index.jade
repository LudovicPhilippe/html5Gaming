extends layout

block content
    div#containerMainMenu
        h1#mainTitle html5Gaming
        input#btnStart(type="button" value ="Play")
        input#btnswitchMainToLeaders(type="button" value ="Leaderboards" )

    div#containerEndMenu
        h1#titleEnd FIN
        h3 Your position
        div#closestScore
        h3 Publish your score
            form#publish(action='/pub',method='post')
                div
                    input#addname(type="text"  placeholder="Your Name")
                    br
                    input#submitmail(type="submit" value="Submit")
            p#publish_response
        input#btnReStart(type="button" value ="Play Again" )
        input#btnMainMenu(type="button" value ="Back to the main menu")
        input#btnswitchEndToLeaders(type="button" value ="Leaderboards" )

    div#leaderboardsMenu
        h1 leaderboards
            div#leader
        input#btnMainMenu0(type="button" value ="Back to the main menu")
